## set local folder.
set header_cache = ~/.mutt/cache/headers
set message_cachedir = ~/.mutt/cache/bodies
set certificate_file = ~/.mutt/certificates
set mailcap_path=$HOME/.mailcap
set mime_forward=yes
set mime_forward_rest=yes

## Editor
set editor = "vim -c 'set spell spelllang=en syntax=mail ft=mail enc=utf-8' '+/^$'"
ignore *
unignore date from subject to cc

###
set folder_format = "%2C %t %N %12s %d %f"
set read_inc=100
set edit_headers = yes
set reverse_name

set askbcc = yes
set text_flowed = yes
set smart_wrap = yes
set pager_stop = yes
set pager_format = " %C - %[%H:%M] %.20v, %s%* %?H? [%H] ?"
set sign_on_top = yes

## reply
set reply_self = no
set indent_string = ">"
set include = yes
set attribution = "On %d, %n wrote:"
set bounce_delivered = yes
set quote_regexp = "^( {0,4}[>|:#]| {0,4}[a-z0-9]+[>|]+)+"
# Folder options
set copy = yes
set move = no

set abort_nosubject = ask-yes
set abort_unmodified = ask-yes
set copy = yes
set include = yes
set metoo  = yes # send reply to myself.
set alias_file = ~/.mutt/aliases
set pager_index_lines = 7
set query_command = "abook --mutt-query '%s'"
macro pager \cb <pipe-entry>'urlview'<enter>'Follow links with urlview'
macro generic,index,pager \ca <shell-escape>abook<return>" "launch abook"
macro index,pager A "<pipe-message>abook --add-email<return>" "add the sender address to abook"
source $alias_file

## Folder hooks
folder-hook imap.iitb.ac.in 'source ~/Scripts/mutt/gpo'
folder-hook sandesh.ee.imap.iitb.ac.in 'source ~/Scripts/mutt/ee'
source ~/Scripts/mutt/gpo  # default
macro index <f2> '<sync-mailbox><enter-command>source ~/Scripts/mutt/gpo<enter><change-folder>!<enter>'
macro index <f3> '<sync-mailbox><enter-command>source ~/Scripts/mutt/ee<enter><change-folder>!<enter>'

set query_command = "~/Scripts/mutt/mutt-ldap.py '%s'"
set timeout=60	#Check for mail every minute
set mail_check=5
set sleep_time=0
set imap_check_subscribed
macro pager \cb <pipe-entry>'urlview'<enter>'Follow links with urlview'

## Put how to label emials here.
# labels
macro index x "<enter-command>set editor=\"~/Scripts/mutt/editlabel.sh append\"\n\
<edit><sync-mailbox><next-undeleted>\
<enter-command>set editor=vim\n" "Append label"
macro pager x "<enter-command>set editor=\"~/Scripts/mutt/editlabel.sh append\"\n\
<edit><sync-mailbox><next-undeleted>\
<enter-command>set editor=vim\n" "Append label"
macro index X "<enter-command>set editor=\"~/Scripts/mutt/editlabel.sh menu\"\n\
<edit><sync-mailbox><next-undeleted>\
<enter-command>set editor=vim\n" "Edit labels"
macro pager X "<enter-command>set editor=\"~/Scripts/mutt/editlabel.sh menu\"\n\
<edit><sync-mailbox><next-undeleted>\
<enter-command>set editor=vim\n" "Edit labels"
macro index \Cx "<limit>~y " "Limit view to label"

set index_format="%4C %Z %{%b %d} %-15.15L %?M?(#%03M)&(%4l)? %?y?(%.20Y) ?%s"
auto_view text/html
alternative_order text/enriched text/plain text/html

